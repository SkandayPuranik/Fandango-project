# Scatter plots show the relationship between two continuous features
# Continuous features are numeric variables that can take any numeric value between any two values

import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

import seaborn as sns

df = pd.read_csv("c:/Users/Admin/Documents/Coding/Data science/Seaborn/dm_office_sales.csv")

# Displaying the correlation between salary and sales
plt.figure(figsize=(10, 3.5), dpi=200)
sns.scatterplot(x='salary', y='sales', data=df, hue='level of education',
             size='salary', alpha=0.5, style='level of education')  #hue - colors the dots by category, alpha - transparency of the dots
plt.show()
plt.savefig('scatterplot')

