import numpy as np

#NUMPY ARRAYS
print("Numpy Arrays:")
# Create an array of 10 zeros
print(np.zeros(10))

print(""
      "")

# Create an array of 10 ones
print(np.ones(10))

print(""
      "")

# Create an array of 10 fives
print(np.ones(10) * 5)

print(""
      "")

# Create an array of the integers from 10 to 50
print(np.arange(10, 51))

print(""
      "")

# Create an array of all the even integers from 10 to 50
print(np.arange(10, 51, 2))

print(""
      "")

# Create a 3*3 matrix with values ranging from 0 to 8
print(np.arange(9).reshape(3, 3))

print(""
      "")

# Create a 3*3 identity matrix
print(np.eye(3))

print(""
      "")

# Use numpy to generate a random number between 0 and 1
print(np.random.rand(1))

print(""
      "")

# Use numpy to generate an array of 25 random numbers sampled from a standard normal distribution
print(np.random.randn(5,5))

print(""
      "")

# Create the following matrix
matrix1 = np.arange(0.01, 1.01, 0.01)
print(matrix1.reshape(10, 10))

print(""
      "")

# Create an array of 10 linearly spaced points between 0 and 1
print(np.linspace(0, 1, 20))

print(""
      "")

#NUMPY INDEXING AND SELECTION
print("Numpy indexing and selection:")

mat = np.arange(1, 26).reshape(5, 5)
print(mat)

print(""
      "")

# Write code that produces the output below
print(mat[2:, 1:])

print(""
      "")

# Write code that produceds the output below
print(mat[3, 4])

# Write code that produces the output given below
print(np.array(mat[:3, 1:2]))

print(""
      "")

# Write code that produces the output given below
print(mat[4])

print(""
      "")

# Write code that reprodces the output shown below
print(mat[3:])

print(""
      "")

#NUMPY OPERATIONS
print("Numpy operations")

# Get the sum of all the values in mat
print(mat.sum)

print(""
      "")

# Get the standard deviation of the values in mat
print(mat.std)

print(""
      "")

# Get the sum of all the columns in mat
print(mat.sum(axis=0))

# Bonus question
# How can we get the same random number everytime:
np.random.seed(101)
print(np.random.rand(1))